<?php
$request =explode("?",$_SERVER['REQUEST_URI'],2)[0];

include('\views\menu.php');

switch ($request) {
    case '/' :
        require __DIR__ . '\views\home.php';
        break;
    case '' :
        require __DIR__ . '\views\home.php';
        break;
    case '/about' :
        require __DIR__ . '\views\about.php';
        break;
    case '/login':
        require __DIR__ . '\views\login.php';
        break;
    default:
        http_response_code(404);
        echo $request;
         break;
    }
?>
